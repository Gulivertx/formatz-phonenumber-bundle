{
    "name": "formatz/phone-number-bundle",
    "type": "symfony-bundle",
    "description": "This Bundle provides a simple symfony form type to tranform value to standard phone number",
    "keywords": ["phonenumber"],
    "license": "MIT",
    "authors": [
        {
            "name": "Fabien Meyer",
            "email": "fabien@format-z.ch"
        }
    ],

    "require": {
        "php":                            "^5.5.9|~7.0",
        "giggsey/libphonenumber-for-php": "^8.3",
        "symfony/config":                 "^2.7|^3.0",
        "symfony/dependency-injection":   "^2.7|^3.0",
        "symfony/framework-bundle":       "^2.7|^3.0",
        "symfony/http-foundation":        "^2.7|^3.0",
        "symfony/form":                   "^2.7|^3.0"
    },

    "autoload":{
        "psr-4":{
            "Formatz\\Bundle\\PhoneNumberBundle\\": ""
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
